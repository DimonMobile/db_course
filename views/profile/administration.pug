extends layout

block additionalScripts
  script(src='/javascripts/profile/materials-preloader.js')
  if session.userRole === 4
    script(src='/javascripts/profile/users-preloader.js')
    script(src='/javascripts/profile/xmlop.js')

block profile-selection
  .row
    .col.s12.purple.lighten-2.hide-on-med-and-down
      a.text-grey.breadcrumb(href='/profile/information') Profile
      a.breadcrumb#profile-page-name(href='/profile/information') Administration
  .row
    .col.s12
      ul.collapsible
        li
          .collapsible-header.waves-effect.waves-red
            i.material-icons view_list
            | Materials
          .collapsible-body
            .row
              .input-field.col.xl3.s12.push-xl9
                .row
                  .col.s12
                    select#materials-select 
                      option(value='PENDING') Pending
                      option(value='REJECTED') Rejected
                      option(value='DELETED') Deleted
                      option(value='DEFAULT') Posted
                    label(for='materials-select') Material status
                .row
                  .col.s6
                    button#prev-materials-btn.btn.waves-effect.waves-light Prev
                  .col.s6
                    button#next-materials-btn.btn.waves-effect.waves-light Next
              table.col.xl9.s12.pull-xl3
                thead
                  tr
                    th Id
                    th Subject
                    th Created
                    th Status
                tbody#materials-tbody
                  tr
                    td 1
                    td loading... 
                    td 1998-05-07
                    td POSTED
        if session.userRole === 4
          li
            .collapsible-header.waves-effect.waves-teal
              i.material-icons person_outline
              | Users
            .collapsible-body
              .row
                .col.s12
                  button#prev-users-btn.btn.waves-effect.waves-light Prev
                  button#next-users-btn.btn.waves-effect.waves-light Next
              .row
                .col.s12
                  table
                    thead
                      tr
                        th Id
                        th Nickname
                        th Email
                        th Role
                        th Registered
                    tbody#users-tbody
                      tr
                        td 1
                        td loading... 
                        td 1998-05-07
                        td POSTED
          li
            .collapsible-header.waves-effect.waves-purple
              i.material-icons import_export
              | Export xml
            .collapsible-body
              #xml-btn.btn.waves-effect.waves-light Export xml 
        